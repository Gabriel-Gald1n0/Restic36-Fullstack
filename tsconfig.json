{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "lib": ["es6", "dom"],
    "strict": true,
    "outDir": "./dist",
    "rootDir": "./src/ts",
    "moduleResolution": "node",
    "esModuleInterop": true
  },
  "include": [
    "src/ts/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
